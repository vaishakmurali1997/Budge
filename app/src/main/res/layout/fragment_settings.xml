<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SettingsFragment">


    <ImageView
            android:src="@drawable/images"
            android:layout_width="177dp"
            android:layout_height="163dp"
            android:id="@+id/dpImage" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Penguin"
            android:textSize="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dpName" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/dpImage" android:textStyle="bold"/>
    <Button
            android:layout_width="52dp"
            android:layout_height="50dp"
            android:id="@+id/chnageImage"
            app:layout_constraintTop_toTopOf="@+id/dpImage"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="108dp"
            android:background="@drawable/photo" android:layout_marginTop="124dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/dpName" app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="Status"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/status" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/dpName" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:textStyle="bold" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="Too lazy to type..."
            android:textSize="18dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/dpStatus"
            app:layout_constraintTop_toTopOf="@+id/status" app:layout_constraintBottom_toBottomOf="@+id/status"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/status"
            android:layout_marginStart="8dp"/>


    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:id="@+id/linearLayout" app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginStart="8dp"
                  android:layout_marginTop="8dp"
                  app:layout_constraintTop_toBottomOf="@+id/dpMobile">
        <Button
                android:text="Change Status"
                android:textColor="#FFF"
                android:textStyle="bold"
                android:layout_width="139dp"
                android:layout_height="49dp"
                android:id="@+id/changeStatus"
                android:background="#F5B041"
                android:layout_weight="1"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                tools:layout_editor_absoluteY="359dp"/>
        <Button
                android:text="Change Number"
                android:textColor="#FFF"
                android:textStyle="bold"
                android:layout_width="139dp"
                android:layout_height="49dp"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:id="@+id/chnageNumber"
                android:background="#3498DB"/>
    </LinearLayout>
    <Button
            android:text="Sign Out"
            android:textColor="#FFF"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button3" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:background="#EC7063"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout"/>


    <TextView
            android:text="Phone"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" app:layout_constraintStart_toStartOf="@+id/status"
            app:layout_constraintEnd_toEndOf="@+id/status" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/status"/>
    <TextView
            android:text="+91 0000000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dpMobile"
            app:layout_constraintTop_toTopOf="@+id/textView" app:layout_constraintBottom_toBottomOf="@+id/textView"
            app:layout_constraintStart_toEndOf="@+id/textView" android:layout_marginStart="8dp"/>
    <TextView
            android:text="Pro User"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            app:layout_constraintTop_toTopOf="@+id/dpImage" app:layout_constraintBottom_toBottomOf="@+id/dpImage"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintStart_toEndOf="@+id/dpImage"
            android:layout_marginStart="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>